<!--components/c-swiper/c-swiper.wxml-->
<swiper autoplay indicator-dots indicator-active-color="#ff5777" interval='3000' circular>
  <block wx:for="{{banner}}" wx:key="index">
    <swiper-item>
      <image src="{{item.image}}" mode="widthFix" class="image-item"></image>
    </swiper-item>
  </block>
</swiper>

